<div class="flex items-center content-center h-full m-auto w-full max-w-sm">
  <div class="w-full p-4 m-auto flex flex-col items-center">
    <p class="align-center mb-6 font-semibold tracking-wide text-4xl">
      ðŸ’°<%= t("app.name") %>
    </p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                 html: { class: "w-full space-y-4" }) do |f| %>
      <div class="w-full">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:
          "text-field", placeholder: t('views.devise.sessions.new.fields.email') %>
      </div>

      <div class="w-full">
        <%= f.password_field :password, autocomplete: "current-password", class:
          "text-field", placeholder: t('views.devise.sessions.new.fields.password') %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="w-full">
          <%= f.check_box :remember_me, checked: true, class: "w-4 h-4 mr-1 text-brand-600
      bg-gray-100 border-gray-300 rounded focus:ring-brand-500
      dark:focus:ring-brand-600 dark:ring-offset-gray-800 focus:ring-2
      dark:bg-gray-700 dark:border-gray-600 text-brand-500" %> <%= f.label :remember_me, class:
          "w-full text-md" %>
        </div>
      <% end %>

      <div class="w-full">
        <%= f.submit t('views.devise.sessions.new.buttons.log_in'), class: "button", role: "button" %>
      </div>
    <% end %>

    <div class="w-full pt-4 text-center">
      <%= link_to t('views.devise.sessions.new.buttons.create'),  new_user_registration_path, { class: 'text-blue-400'} %>
    </div>
  </div>

</div>