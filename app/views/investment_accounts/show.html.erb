<%= render 'layouts/page_container', header: t('views.investment_accounts.show.header'), header_controls: render('show_header_controls') do %>

  <div class="grid grid-cols-12 gap-4 w-100 h-full">
    <div class="col-span-8 border rounded">
      <%= render 'layouts/page_subheader', subheader: t('views.investment_accounts.show.performance.subheader') %>
    </div>
    <div class="col-span-4">
      <div class="grid grid-rows-12 gap-4 w-100 h-full">
        <div class="row-span-6 border rounded">
          <%= render 'layouts/page_subheader', subheader: t('views.investment_accounts.show.details.subheader') %>
          <div class="flex flex-col pb-4">
            <div class="label text-xl">
              <%= t('views.investment_accounts.new.fields.name') %>
            </div>
            <div class="text-xl">
              <%= @investment_account.name %>
            </div>
          </div>

          <div class="flex flex-col pb-4">
            <div class="label text-xl">
              <%= t('views.investment_accounts.new.fields.description') %>
            </div>
            <div class="text-xl">
              <%= @investment_account.description %>
            </div>
          </div>

          <div class="flex flex-col pb-4">
            <div class="label text-xl">
              <%= t('views.investment_accounts.new.fields.contribution_limit') %>
            </div>
            <div class="text-xl">
              <%= @investment_account.contribution_limit %>
            </div>
          </div>

        </div>

        <div class="row-span-6 border rounded">
          <%= render 'layouts/page_subheader', subheader: t('views.investment_accounts.show.activity.subheader') %>
        </div>
      </div>
    </div>
  </div>
<% end %>