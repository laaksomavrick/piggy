<%= link_to investment_account_path(account) do %>
  <li class="flex justify-between gap-x-6 pb-4">
    <div class="flex min-w-0 gap-x-4">
      <p class="text-white text-xl bg-brand-400 flex items-center justify-center w-14 h-14 rounded">
        <%= account.name.first %>
      </p>
      <div class="min-w-0 flex-auto">
        <p class="text-sm font-semibold leading-6 text-gray-900"><%= account.name %></p>
        <p class="mt-1 truncate text-xs leading-5 text-gray-500"><%= account.description %></p>
      </div>
    </div>
    <div class="hidden shrink-0 sm:flex sm:flex-col sm:items-end">
      <p class="text-sm leading-6 text-gray-900"><%= account.contribution_limit %></p>
    </div>
  </li>
<% end %>